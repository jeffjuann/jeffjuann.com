---
import { Icon } from 'astro-icon/components';
import { getCollection } from 'astro:content';

const [{ data }] = await getCollection('core');
---

<footer class="px-4 flex flex-col sm:flex-row justify-between items-end">
  <ul class="flex flex-row gap-2 transition-all">
    {
      data.contacts.map((social) =>
      {
        return (
          <li class="w-fit h-fit"><a href={social.value}><Icon name={social.type} class="size-5 text-muted-foreground hover:text-foreground"/></a></li>
        )
      })
    }
  </ul>
  <div class="flex flex-col items-end">
    <p class="text-sm text-muted-foreground font-medium">Built with <a href="https://astro.build/" class="underline italic">Astro</a>.</p>
    <p class="text-sm text-muted-foreground font-medium">Â© 2023 Jeff Juan. All rights reserved.</p>
  </div>
</footer>